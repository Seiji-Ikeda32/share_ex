<div class="container">
  <div class="header">
  <h1>投稿一覧</h1>
  <%= link_to new_share_path, method: :get do %>
    <i class="fas fa-plus fa-3x text-right"></i>
  <% end %>
  </div>
  
  <div class="row">
    <% @shares.each do |share| %>
      <div class="col-md-4">
        <div class="card mt-4">
          <%= link_to share.id, share %>
          <div class="card-header text-center">
            <%= share.title %>
          </div>
          <div class="card-body">
            <p><%= share.content %></p>
            <p class="text-right">場所：<%= share.place %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= paginate @shares %>


